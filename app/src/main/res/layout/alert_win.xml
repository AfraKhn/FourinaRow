<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/dialog_iv_won"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/btn_default"/>
            <TextView
                android:id="@+id/dialog_tw_won"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:text="It Was A Draw!!"
                android:textColor="#000000"
                android:textSize="30sp" />


        </LinearLayout><!--|1| Containing text and iv-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/dialog_tw_would"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Would You Like To Save The Resualts? "
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_tw_note"
                    android:text="Note : Will Not Be Saved Automatically"
                    android:textColor="#F10606"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dialog_tw_saved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saved Score Successfully!!"
                    android:textColor="#1B810F"
                    android:textSize="16sp"
                    android:visibility="invisible" />


            </LinearLayout><!--|2.1| TextViews-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dialog_btn_yes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="95dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#0F7709"
                    android:text="Save"
                    android:textSize="12sp" />


            </LinearLayout><!--|2.2| Buttons-->


        </LinearLayout><!--|2| Save and Note-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_playagain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#521971"
                android:text="Play Again"
                android:textSize="13sp" />

            <Button
                android:id="@+id/dialog_btn_mainmenu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#3D64B1"
                android:text="Main Menu"
                android:textSize="13sp" />


        </LinearLayout>


    </LinearLayout><!--Main Linear-->


</LinearLayout><!--Dialog-->